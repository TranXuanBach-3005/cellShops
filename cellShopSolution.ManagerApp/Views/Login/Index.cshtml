@using cellShopSloution.ViewModel.Dtos.Users
@model LoginRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Admin</title>
    <!-- Google Font: Source Sans Pro -->
    <link href="/template/dist/css/adminlte.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/template/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/template/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/template/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-danger">
            <div class="card-header text-center">
                <h3>ĐĂNG NHẬP HỆ THỐNG</h3>
            </div>
            <div class="card-body">
                @Html.Raw(ViewBag.Error)
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    <div class="input-group mb-3">
                        <input type="text" asp-for="UserName" required class="form-control" placeholder="Tên đăng nhập hoặc Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                       
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" asp-for="Password" required class="form-control" placeholder="Mật khẩu">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-check mb-3 mall">
                        <input class="form-check-input" asp-for="RememberMe" type="checkbox" value="" />
                        <label class="form-check-label">Remember Password</label>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <a style="text-decoration:none" class="small text-blackm" href="Users/ForgotPassword">Quên mật khẩu?</a>
                        <button class="btn btn-sm btn-outline-danger" type="submit">ĐĂNG NHẬP</button>
                    </div>
                }
            </div>
            <div class="card-footer text-center py-3">
                <div class="small"><a class="text-black" style="text-decoration:none" href="register.html">Liên hệ Admin!</a></div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="/template/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/template/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/template/dist/js/adminlte.min.js"></script>
</body>
</html>


