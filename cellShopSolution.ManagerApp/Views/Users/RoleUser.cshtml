@model cellShopSloution.ViewModel.Dtos.Users.RoleUserRequest

@{
    ViewData["Title"] = "RoleUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">GÁN QUYỀN NGƯỜI DÙNG</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">TRANG CHỦ</a></li>
        <li class="breadcrumb-item active">Gán quyền người dùng</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header"><a class="btn btn-sm btn-danger" asp-action="Index" asp-controller="Users">Về danh sách</a></div>
        <div class="card-body">
            <form asp-action="RoleUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                @for (var i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="form-group">
                        <label asp-for="Roles[i].Name" class="control-label"></label>
                        <input type="checkbox" asp-for="Roles[i].Selected" class="form-control" />
                        <span asp-validation-for="Roles[i].Name" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <input type="submit" value="L" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
