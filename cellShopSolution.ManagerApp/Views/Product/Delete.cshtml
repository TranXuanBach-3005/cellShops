@model cellShopSloution.ViewModel.Dtos.Products.ProductDeleteRequest

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid px-4">
    <h4 class="mt-4 text-center">DANH SÁCH SẢN PHẨM</h4>
    <div class="card mb-4">
        <div class="card-header">
            <div class="col-md-6 text-right">
                <a class="btn btn-sm btn-info" asp-action="Index" asp-controller="Product"><i class="fas fa-long-arrow-alt-left"></i>Về danh sách</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th style="width:120px">
                        Tên trường
                    </th>
                    <th>
                        Nội dung
                    </th>
                </tr>
                <tr>
                    <td>  @Html.DisplayNameFor(model => model.Id)</td>
                    <td>@Html.DisplayFor(model => model.Id)</td>
                </tr>
                <form asp-action="Delete">
                    <button class="btn btn-sm btn-danger text-center" type="submit"><i class="fas fa-trash"></i>Xóa</button>
                </form>
            </table>
        </div>

    </div>
</div>